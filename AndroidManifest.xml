<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyricoo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:name="com.lyricoo.LyricooApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lyricoo.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lyricoo.activity.LyricooSelectionActivity"
            android:label="@string/title_activity_lyricoo_selection" >
        </activity>
        <activity
            android:name="com.lyricoo.activity.ContactsActivity"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="com.lyricoo.activity.ConversationActivity"
            android:label="@string/title_activity_conversation" >
        </activity>
        <activity
            android:name="com.lyricoo.activity.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.lyricoo.activity.MessagesActivity"
            android:label="@string/title_activity_messages" >
        </activity>
    </application>

</manifest>