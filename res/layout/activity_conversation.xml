<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/root_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.lyricoo.messages.MessageList
            android:id="@+id/messages_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/message_bar"
            android:layout_alignParentTop="true"
            android:divider="@color/transparent"
            android:dividerHeight="10dp" />

        <RelativeLayout
            android:id="@+id/message_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/background2" >

            <ImageView
                android:id="@+id/send_button"
                android:layout_width="@dimen/conversation_send_button_size"
                android:layout_height="@dimen/conversation_send_button_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/conversation_send_button_right_margin"
                android:onClick="sendMessage"
                android:src="@drawable/ic_conversation_send" />

            <EditText
                android:id="@+id/conversation_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/conversation_text_input_left_margin"
                android:layout_marginRight="@dimen/conversation_text_input_right_margin"
                android:layout_marginTop="@dimen/conversation_text_input_top_margin"
                android:layout_toLeftOf="@+id/send_button"
                android:layout_toRightOf="@+id/song_selection_container"
                android:background="@layout/conversation_edit_text"
                android:ems="10"
                android:hint="@string/conversation_input"
                android:inputType="text|textMultiLine"
                android:maxLines="3"
                android:paddingLeft="@dimen/conversation_text_input_side_padding"
                android:paddingRight="@dimen/conversation_text_input_side_padding" />

            <RelativeLayout
                android:id="@+id/song_selection_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/conversation_add_song_button_left_margin" >

                <ImageView
                    android:id="@+id/add_song_button"
                    android:layout_width="@dimen/conversation_add_song_button_size"
                    android:layout_height="@dimen/conversation_add_song_button_size"
                    android:layout_centerInParent="true"
                    android:onClick="lyricooButtonClicked"
                    android:src="@drawable/ic_conversation_add_music" />

                <com.lyricoo.ui.PlayButton
                    android:id="@+id/play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:onClick="playButtonClicked"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/song_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/play_button"
                    android:layout_marginTop="@dimen/conversation_song_title_top_margin"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="@dimen/conversation_song_title_width"
                    android:text="shot for me"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:textSize="@dimen/conversation_song_title_text_size"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- The navigation drawer -->

    <include
        android:id="@+id/sliding_menu_list"
        layout="@layout/sliding_menu" >
    </include>

</android.support.v4.widget.DrawerLayout>