<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyricoo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <permission
        android:name="com.lyricoo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.lyricoo.permission.C2D_MESSAGE" />

    <application
        android:name="com.lyricoo.LyricooApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver
            android:name="com.lyricoo.sync.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.lyricoo" />
            </intent-filter>
        </receiver>

        <service android:name="com.lyricoo.sync.GcmIntentService" />
        <service
            android:name="com.lyricoo.sync.LyricooPollingService"
            android:exported="false" />

        <activity
            android:name="com.lyricoo.session.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lyricoo.friends.ContactsActivity"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="com.lyricoo.messages.InboxActivity"
            android:label="@string/title_activity_inbox" >
        </activity>
        <activity
            android:name="com.lyricoo.messages.ConversationActivity"
            android:label="@string/title_activity_conversation"
            android:parentActivityName="com.lyricoo.messages.InboxActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lyricoo.messages.InboxActivity" />
        </activity>
        <activity
            android:name="com.lyricoo.friends.FriendsActivity"
            android:label="@string/title_activity_friends" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.lyricoo.session.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name="com.lyricoo.session.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.lyricoo.music.CategoriesActivity"
            android:label="@string/categories_activity_title" >
        </activity>
        <activity
            android:name="com.lyricoo.music.CategoryActivity"
            android:parentActivityName="com.lyricoo.music.CategoriesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lyricoo.music.CategoriesActivity" />
        </activity>
    </application>

</manifest>