<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lyricoo="http://schemas.android.com/apk/res/com.lyricoo"
    android:id="@+id/category_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/category_song_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/song_options"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
    </ListView>

    <RelativeLayout
        android:id="@+id/song_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background2"
        android:visibility="gone" >

        <com.lyricoo.ui.PlayButton
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/category_play_button_margin_bottom"
            android:layout_marginLeft="@dimen/category_play_button_margin_left"
            android:layout_marginRight="@dimen/category_play_button_margin_right"
            android:layout_marginTop="@dimen/category_play_button_margin_top"
            android:onClick="playClicked"
            lyricoo:size="@dimen/category_play_button_size" />

        <ImageView
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/category_send_button_margin_bottom"
            android:layout_marginLeft="@dimen/category_send_button_margin_left"
            android:layout_marginRight="@dimen/category_send_button_margin_right"
            android:layout_marginTop="@dimen/category_send_button_margin_top"
            android:onClick="sendClicked"
            android:src="@drawable/ic_conversation_send" />

        <!-- To center song title between send button and play button we have to do some hacky stuff -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/send_button"
            android:layout_toRightOf="@+id/play_button" >

            <TextView
                android:id="@+id/song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/category_selected_song_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>