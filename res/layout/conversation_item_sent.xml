<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- Use a relativelayout with background color to create a colored bar -->

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="@dimen/conversation_item_bar_width"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/conversation_item_bar_side_margin"
        android:background="@color/primary1" />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/conversation_item_content_to_playbutton_spacing"
        android:layout_marginRight="@dimen/conversation_item_content_to_bar_spacing"
        android:layout_marginTop="@dimen/conversation_item_content_top_margin"
        android:layout_toLeftOf="@id/bar"
        android:layout_toRightOf="@+id/play_button"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_content"
        android:layout_marginRight="@dimen/conversation_item_content_to_bar_spacing"
        android:layout_toLeftOf="@id/bar"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <com.lyricoo.ui.PlayButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/conversation_item_playbutton_margin"
        android:onClick="playButtonClicked" />

</RelativeLayout>